<h1><%= title %></h1>

<%- messages() %>

<% if (errors) { %>
    <div class="errors">
      <ul>
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
      </ul>
    </div>
<% } %>

<div class="update-container">
  <!-- Account Update Form -->
  <h2>Account Update</h2>
  <form id="accountUpdateForm" action="/account/update" method="post">
    <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
    <div class="form-group">
      <label for="account_firstname">First Name:</label>
      <input type="text" name="account_firstname" id="account_firstname" 
             value="<%= typeof account_firstname !== 'undefined' ? account_firstname : locals.accountData.account_firstname %>" 
             required>
    </div>
    <div class="form-group">
      <label for="account_lastname">Last Name:</label>
      <input type="text" name="account_lastname" id="account_lastname" 
             value="<%= typeof account_lastname !== 'undefined' ? account_lastname : locals.accountData.account_lastname %>" 
             required>
    </div>
    <div class="form-group">
      <label for="account_email">Email:</label>
      <input type="email" name="account_email" id="account_email" 
             value="<%= typeof account_email !== 'undefined' ? account_email : locals.accountData.account_email %>" 
             required>
    </div>
    <button type="submit">Update Account</button>
  </form>

  <!-- Change Password Form -->
  <h2>Change Password</h2>
  <form id="changePasswordForm" action="/account/update-password" method="post">
    <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
    <div class="form-group">
      <label for="account_password">New Password:</label>
      <input type="password" name="account_password" id="account_password" 
             required>
      <small>Password must be at least 12 characters long, with at least 1 uppercase letter, 1 lowercase letter, 1 number, and 1 symbol. Entering a new password will replace your current password.</small>
    </div>
    <button type="submit">Change Password</button>
  </form>
</div>