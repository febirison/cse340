<h1><%= title %></h1>

<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="registration-container">
  <form action="/account/register" method="post" class="registration-form">
    <label for="account_firstname">First Name:</label>
    <input 
      type="text" 
      id="account_firstname" 
      name="account_firstname" 
      placeholder="Enter your first name" 
      required
      value="<%= locals.account_firstname %>"
    >

    <label for="account_lastname">Last Name:</label>
    <input 
      type="text" 
      id="account_lastname" 
      name="account_lastname" 
      placeholder="Enter your last name" 
      required
      value="<%= locals.account_lastname %>"
    >

    <label for="account_email">Email:</label>
    <input 
      type="email" 
      id="account_email" 
      name="account_email" 
      placeholder="Enter your email" 
      required
    >

    <label for="account_password">Password:</label>
    
    <input 
      type="password" 
      id="account_password" 
      name="account_password" 
      placeholder="Enter your password" 
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      title="Must contain at least 12 characters, 1 number, 1 uppercase, 1 lowercase, and 1 special character"
    >
    <div class="password-requirements">
        <small>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        </small>
      </div>

    <div class="show-password-container">
      <input type="checkbox" id="show-password">
      <label for="show-password">Show Password</label>
    </div>

    <button type="submit">REGISTER</button>
  </form>
  
  <p class="login-link">
    Already have an account? <a href="/account/login">Login here</a>
  </p>
</div>

<script src="/js/showPassword.js"></script>
